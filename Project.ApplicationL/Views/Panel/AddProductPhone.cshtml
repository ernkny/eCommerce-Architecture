@model  Project.EnitityL.Entities.Phone
@{
    ViewBag.Title = "AddProductPhone";
    Layout = "~/Views/Shared/PanelLayout.cshtml";
}


<form style="margin-top:15px" class="form-group container "
      method="post" enctype="multipart/form-data">
    <h2 class="text-black-50 text-align-center font-weight-bold"style="padding-top:20px;" >ÜRÜN EKLE</h2>
    <div class="form-group row " style=" margin-top:15px;">
        <label style=" margin-top:15px;" class="text-left font-weight-bold">Telefon Model</label>
        <input type="text" class="form-control" name="PhoneModal" />

    </div>
    <div class="form-group row ">
        <label class="text-left font-weight-bold">Keywords</label>
        <input type="text" class="form-control" name="Keywords" />

    </div>
    <div class="form-group row ">
        <label class="text-left font-weight-bold">Toplam Adet</label>
        <input type="number" class="form-control" name="Total" />

    </div>
    <div class="form-group row ">
        <label class="text-left font-weight-bold">Fiyat</label>
        <input type="number" class="form-control" name="Price" />

    </div>
    <div class="form-group row ">
        <label class="text-left font-weight-bold">Eklenme Tarihi</label>
        <input type="date" class="form-control" name="Tarih" />

    </div>

    <hr style="border:1px solid gray" />



    <div class="form-group row ">
        <label class="text-left font-weight-bold">Resim Seç</label>
        <input type="file" class="form-control" name="Files" multiple />

    </div>
    <div class="form-group row ">
        <label class="text-left font-weight-bold">Özellikler</label>
        <textarea type="text" class="form-control" name="PhoneParticular" id="ckEditor"></textarea>

    </div>
    <div style="margin-top:15px;" class="container">
        <button class="btn btn-info" id="Habereklebtn">Telefon Ekle</button>
    </div>

</form>
<script src="~/Scripts/ckeditor/ckeditor.js">
    
</script>
<script type="text/javascript">

    CKEDITOR.replace('ckEditor');
</script>


